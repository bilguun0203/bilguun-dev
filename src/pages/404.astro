---
import Layout from "../layouts/Layout.astro";
import NavContainer from "../components/NavContainer.astro";
import NavButton from "../components/NavButton.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <div class="base-style h-screen text-center">
    <main
      class="container mx-auto flex h-full flex-grow flex-col items-center justify-center"
    >
      <p class="text-6xl font-light text-red-500 dark:text-red-400">
        ERROR 404
      </p>
      <p class="text-3xl font-light text-gray-dark dark:text-gray-light">
        Page Not Found
      </p>
      <NavContainer>
        <NavButton href="/">Back to Homepage</NavButton>
      </NavContainer>
    </main>
    <Footer />
  </div>
</Layout>
