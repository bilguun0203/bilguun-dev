---
export interface Props {
  title: string;
  duration?: string;
}

const { title, duration } = Astro.props;
---

<div class="my-2 font-mono">
  <p class="text-lg font-bold">
    {title}{
      duration && (
        <span class="text-gray ml-2 text-sm font-bold">{duration}</span>
      )
    }
  </p>
  <div class="text-gray-dark dark:text-gray-light text-base font-light">
    <slot />
  </div>
</div>
